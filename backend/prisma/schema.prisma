generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// SQLite does not support Enums or JSON natively in Prisma the same way as Postgres.
// We convert Enums to String and Json to String (stored as serialized JSON).

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String?
  avatarUrl    String?
  createdAt    DateTime @default(now())
  
  householdId  String?
  household    Household? @relation(fields: [householdId], references: [id])
  
  accounts     Account[]
  createdTransactions Transaction[]
  alerts       Alert[]
}

model Household {
  id        String   @id @default(uuid())
  name      String
  inviteCode String  @unique @default(cuid()) // Simple unique code for joining
  createdAt DateTime @default(now())
  
  users     User[]
  accounts  Account[]
  categories Category[]
  loans     Loan[]
  subscriptions Subscription[]
  goals     Goal[]
  people    Person[]

  recurringRules RecurringRule[]

  budgetMode    String   @default("CALENDAR") // CALENDAR, SALARY, CASHFLOW
  budgetConfig  String?  // JSON string: { salaryDay: 1, incomeSources: [] }
  budgets       Budget[]
  
  analyticsMonthly AnalyticsMonthly[]
  analyticsCategories AnalyticsCategory[]
  analyticsAccounts AnalyticsAccount[]
}

// Enum AccountType removed, handled as String in application
model Account {
  id          String      @id @default(uuid())
  householdId String
  household   Household   @relation(fields: [householdId], references: [id])
  
  userId      String?     
  user        User?       @relation(fields: [userId], references: [id])
  
  type        String      // Was AccountType
  name        String
  currency    String      @default("INR") // Default to Indian Rupee
  balance     Decimal     @default(0)
  isArchived  Boolean     @default(false)
  meta        String?     // Was Json, stored as stringified JSON
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @default(now()) @updatedAt
  
  transactions Transaction[]
  recurringRules RecurringRule[]
  loans       Loan[]
  creditCard  CreditCard?
  
  analytics   AnalyticsAccount[]
}

// Enum TransactionType removed, handled as String
model Transaction {
  id          String          @id @default(uuid())
  
  accountId   String
  account     Account         @relation(fields: [accountId], references: [id])
  
  amount      Decimal
  currency    String          @default("INR")
  type        String          // Was TransactionType
  
  categoryId  String?
  category    Category?       @relation(fields: [categoryId], references: [id])
  
  subCategory String?
  description String?
  date        DateTime
  // tags        String[] // SQLite doesn't natively support arrays
  tags        String?     // Stored as comma-separated string or stringified JSON
  
  counterpartyId String?
  person         Person? @relation(fields: [counterpartyId], references: [id])

  linkedTransactionId String?  @unique
  linkedTransaction   Transaction? @relation("TransferLink", fields: [linkedTransactionId], references: [id])
  linkedFrom          Transaction? @relation("TransferLink")

  recurringRuleId String?
  recurringRule   RecurringRule? @relation(fields: [recurringRuleId], references: [id])
  
  createdBy   String
  creator     User @relation(fields: [createdBy], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  loanEmi     LoanEMI?
  creditCardPayment CreditCardPayment?
  
  budgetId    String?
  budget      Budget? @relation(fields: [budgetId], references: [id], onDelete: SetNull)
}

// Enum CategoryKind removed
model Category {
  id          String       @id @default(uuid())
  householdId String
  household   Household    @relation(fields: [householdId], references: [id])
  name        String
  kind        String       // Was CategoryKind
  color       String?
  isActive    Boolean      @default(true)
  updatedAt   DateTime     @default(now()) @updatedAt
  
  transactions Transaction[]
  recurringRules RecurringRule[]
  budgets     Budget[]
  planItems   BudgetPlanItem[]
  
  analytics   AnalyticsCategory[]
}

model Loan {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id])
  
  name        String      @default("My Loan")
  lender      String?
  type        String      @default("PERSONAL") // HOME, PERSONAL, AUTO, OTHER
  
  principal   Decimal
  interestRate Decimal
  interestType String     @default("REDUCING") // REDUCING, FLAT
  
  startDate   DateTime
  tenureMonths Int        // Was termMonths
  
  emiAmount   Decimal
  
  linkedAccountId String?
  linkedAccount   Account? @relation(fields: [linkedAccountId], references: [id])
  
  outstandingPrincipal Decimal // Was outstanding
  
  status      String      @default("ACTIVE") // ACTIVE, CLOSED, FORECLOSED
  
  createdAt   DateTime @default(now())
  
  emis        LoanEMI[]
  prepayments LoanPrepayment[]
}

model LoanEMI {
  id          String   @id @default(uuid())
  loanId      String
  loan        Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  
  emiNumber   Int
  dueDate     DateTime
  
  principalComponent Decimal
  interestComponent  Decimal
  totalAmount        Decimal
  
  status      String   @default("PENDING") // PENDING, PAID, SKIPPED, PARTIAL
  paidDate    DateTime?
  
  transactionId String?   @unique
  transaction   Transaction? @relation(fields: [transactionId], references: [id])
}

model LoanPrepayment {
  id          String   @id @default(uuid())
  loanId      String
  loan        Loan     @relation(fields: [loanId], references: [id], onDelete: Cascade)
  
  amount      Decimal
  date        DateTime
  strategy    String   // REDUCE_TENURE, REDUCE_EMI
  
  createdAt   DateTime @default(now())
}

// Enum SubscriptionPeriod removed
model Subscription {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id])
  name        String
  amount      Decimal
  period      String     // Was SubscriptionPeriod
  nextBillingDate DateTime
  autoRenew   Boolean @default(true)
  createdAt   DateTime @default(now())
}

// Enum GoalType removed
model Goal {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id])
  name        String
  targetAmount Decimal
  currentAmount Decimal
  targetDate  DateTime
  type        String     // Was GoalType
  createdAt   DateTime @default(now())
}

model Alert {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String
  condition   String
  nextTrigger DateTime?
  isActive    Boolean  @default(true)
}

model Person {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id])
  name        String
  contactInfo String?
  notes       String?
  transactions Transaction[]
}

model RecurringRule {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id])
  ruleType    String
  cron        String?
  amount      Decimal
  
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id])
  
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  
  transactions Transaction[]
}

model CreditCard {
  id                  String   @id @default(uuid())
  accountId           String   @unique
  account             Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
  
  issuer              String?
  creditLimit         Decimal
  billingCycleStartDay Int     // Day of month (1-31)
  dueDays             Int      // Days to pay after statement generation
  interestRateMonthly Decimal
  minimumDuePercent   Decimal  @default(5)
  outstandingAmount   Decimal  @default(0)
  
  status              String   @default("ACTIVE") // ACTIVE, BLOCKED, CLOSED
  
  statements          CreditCardStatement[]
  payments            CreditCardPayment[]
}

model CreditCardStatement {
  id              String   @id @default(uuid())
  creditCardId    String
  creditCard      CreditCard @relation(fields: [creditCardId], references: [id], onDelete: Cascade)
  
  cycleStart      DateTime
  cycleEnd        DateTime
  statementDate   DateTime
  
  openingBalance  Decimal
  totalSpends     Decimal
  totalPayments   Decimal 
  
  interestCharged Decimal  @default(0)
  lateFee         Decimal  @default(0)
  
  closingBalance  Decimal
  minimumDue      Decimal
  dueDate         DateTime
  
  status          String   @default("OPEN") // OPEN, PAID, OVERDUE
  
  createdAt       DateTime @default(now())
  
  payments        CreditCardPayment[] // Payments made *against* this statement
}

model CreditCardPayment {
  id              String   @id @default(uuid())
  creditCardId    String
  creditCard      CreditCard @relation(fields: [creditCardId], references: [id])
  
  statementId     String?
  statement       CreditCardStatement? @relation(fields: [statementId], references: [id])
  
  amount          Decimal
  paymentDate     DateTime
  paymentType     String   // FULL, PARTIAL, MINIMUM
  
  transactionId   String   @unique
  transaction     Transaction @relation(fields: [transactionId], references: [id])
}

model Budget {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id])
  
  name        String
  type        String   // RECURRING, EVENT
  status      String   @default("ACTIVE") // ACTIVE, PLANNING
  amount      Decimal
  
  // For RECURRING
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  period      String?  // MONTHLY
  
  // For EVENT
  startDate   DateTime?
  endDate     DateTime?
  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  transactions Transaction[]
  planItems   BudgetPlanItem[]
}

model BudgetPlanItem {
  id          String   @id @default(uuid())
  budgetId    String
  budget      Budget   @relation(fields: [budgetId], references: [id], onDelete: Cascade)

  name        String
  unitAmount  Decimal
  quantity    Int      @default(1)
  totalAmount Decimal

  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])

  createdAt   DateTime @default(now())
}


model AnalyticsMonthly {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  year        Int
  month       Int      // 1-12
  
  income      Decimal  @default(0)
  expense     Decimal  @default(0)
  netSavings  Decimal  @default(0)
  
  updatedAt   DateTime @updatedAt
  
  @@unique([householdId, year, month])
  @@index([householdId, year, month])
}

model AnalyticsCategory {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  year        Int
  month       Int
  
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  type        String    // INCOME or EXPENSE (Categories usually have one, but good to store)
  
  amount      Decimal   @default(0)
  count       Int       @default(0)
  
  updatedAt   DateTime @updatedAt
  
  @@unique([householdId, year, month, categoryId])
}

model AnalyticsAccount {
  id          String   @id @default(uuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  year        Int
  month       Int

  accountId   String
  account     Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)

  income      Decimal   @default(0)
  expense     Decimal   @default(0)
  transfersIn Decimal   @default(0)
  transfersOut Decimal  @default(0)
  
  updatedAt   DateTime @updatedAt

  @@unique([householdId, year, month, accountId])
}
